# Production Environment Configuration
# Copy this to .env and update with your actual values

# =================================
# SALT EDGE API CONFIGURATION
# =================================
# Get these from https://www.saltedge.com/clients/profile/secrets
SALTEDGE_BASE_URL=https://www.saltedge.com/api/v6
SALTEDGE_APP_ID=your_production_app_id
SALTEDGE_SECRET_KEY=your_production_secret_key
SALTEDGE_CLIENT_ID=your_production_client_id

# =================================
# GOOGLE API CONFIGURATION (Optional)
# =================================
# Place your credentials.json file in the ./credentials/ directory
GOOGLE_CREDENTIALS_FILE=/app/credentials/credentials.json
GOOGLE_TOKEN_FILE=/app/credentials/token.json

# =================================
# APPLICATION CONFIGURATION
# =================================
DEBUG=False

# =================================
# BACKUP CONFIGURATION
# =================================
# Cron format: minute hour day month weekday
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# =================================
# MONITORING CONFIGURATION
# =================================
HEALTH_CHECK_INTERVAL=300  # 5 minutes

# =================================
# DOCKER CONFIGURATION
# =================================
COMPOSE_PROJECT_NAME=money-manager
COMPOSE_FILE=docker-compose.prod.yml
